@model IEnumerable<Wechflix.Models.Movie>
@{
	ViewBag.Title = "Movies";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (!Model.Any()) {
	<p>We do not have any Movies</p>
}
else {
	<p>
		@Html.ActionLink("Add New Movie", "CreateNew", "Movies", null, new { @class = "btn btn-primary" }) 
		    
		@Html.ActionLink("View Random Movie", "RandomMovie", "Movies", null, new { @class = "btn btn-primary" })
	</p>

	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>Movies</th>
				<th>Genre</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model) {
				<tr>
					<td>@Html.ActionLink(movie.Name, "Details", "Movies", new { Id = movie.Id }, null)</td>
					<td>@movie.Genre.Name</td>
				</tr>
			}
		</tbody>
	</table>
}

